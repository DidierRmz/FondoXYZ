@using Newtonsoft.Json
@model IEnumerable<FondoXYZ.Models.Apartamento>

@{
    ViewData["Title"] = "Apartamentos";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .botonselect {
        background-color: #bf2f38;
        color: #fff;
    }
</style>

<div class="container">
    @if (Model == null || !Model.Any())
    {
        <p>No se encontraron apartamentos.</p>
    }
    else
    {
        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn botonselect btn-danger">Cerrar sesión</button>
        </form>
        <div class="row mt-3">
            <div class="col-md-12 my-3">
                <h3 class="text-left">Sedes Recreativas y Apartamentos</h3>
            </div>
        </div>

        <ul class="nav nav-tabs" id="apartamentosTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="list-tab" data-bs-toggle="tab" href="#list" role="tab" aria-controls="list"
                    aria-selected="true">Sedes Recreativas y Apartamentos</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link disabled" id="map-tab" data-bs-toggle="tab" href="#map" role="tab" aria-controls="map"
                    aria-selected="false">Seleccione sus Fechas</a>
            </li>
        </ul>

        <div class="tab-content" id="apartamentosTabContent">
            <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
                <div class="row mt-3">
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Tipo</th>
                                    <th>Ubicación</th>
                                    <th>Sede</th>
                                    <th>Capacidad Maxima</th>
                                    <th>Seleccionar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var apartamento in Model)
                                {
                                    <tr>
                                        <td class="w-25"><img src="~/assets/images/sede.jpg" alt="@apartamento.Nombre"
                                                class="img-thumbnail"></td>
                                        <td>@apartamento.Nombre</td>
                                        <td>@apartamento.Descripcion.Substring(0, 150)...</td>
                                        <td>@apartamento.Tipo</td>
                                        <td>@apartamento.Ubicacion</td>
                                        <td>@apartamento.SedeRecreativa?.Nombre</td>
                                        <td>@apartamento.CapacidadMaxima</td>
                                        <td>
                                            <button class="btn btn-danger botonselect seleccionar-apartamento"
                                                data-id="@apartamento.Id">Seleccionar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="map" role="tabpanel" aria-labelledby="map-tab">
                <div class="row">
                    <!-- Parte izquierda: Opciones para consultar disponibilidad y calcular tarifa -->
                    <div class="col-md-4">
                        <h3>Consultar Disponibilidad</h3>
                        <form id="disponibilidad-form">
                            @Html.AntiForgeryToken() <!-- Agregar token antiforgery -->
                            <div class="form-group">
                                <label for="fecha-inicio">Fecha de inicio:</label>
                                <input type="date" id="fecha-inicio" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="fecha-fin">Fecha de fin:</label>
                                <input type="date" id="fecha-fin" class="form-control" required />
                            </div>
                            <button type="submit" class="btn botonselect btn-danger">Consultar Disponibilidad</button>
                        </form>

                        <h3 class="mt-4">Calcular Tarifa</h3>
                        <form id="tarifa-form">
                            @Html.AntiForgeryToken() <!-- Agregar token antiforgery -->
                            <div class="form-group">
                                <label for="numero-personas">Número de personas:</label>
                                <input type="number" id="numero-personas" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="temporada">Temporada:</label>
                                <select id="temporada" class="form-control">
                                    <option value="Alta">Alta</option>
                                    <option value="Baja">Baja</option>
                                </select>
                            </div>
                            <button type="submit" class="btn botonselect btn-danger">Calcular Tarifa</button>
                        </form>
                    </div>

                    <div class="col-md-4">
                        <img src="~/assets/images/sede.jpg" class="img-thumbnail">
                    </div>

                    <!-- Parte derecha: Detalles del apartamento seleccionado -->
                    <div class="col-md-4">
                        <h2><strong></strong> <span id="apartamento-nombre"></span></h2>
                        <p><strong>Descripción:</strong> <span id="apartamento-descripcion"></span></p>
                        <p><strong>Tipo:</strong> <span id="apartamento-tipo"></span></p>
                        <p><strong>Ubicación:</strong> <span id="apartamento-ubicacion"></span></p>
                        <p><strong>Capacidad Máxima:</strong> <span id="apartamento-capacidad"></span></p>
                    </div>
                </div>

                <!-- Parte inferior: Tabla con reservas del usuario logueado -->
                <div class="mt-4">
                    <h3>Mis Reservas</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fecha de inicio</th>
                                <th>Fecha de fin</th>
                                <th>Apartamento</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody id="reservas-usuario">
                            <!-- Aquí se insertarán las reservas del usuario logueado -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const botonesSeleccionar = document.querySelectorAll('.seleccionar-apartamento');
        const tabMap = document.querySelector('#map-tab');

        botonesSeleccionar.forEach(boton => {
            boton.addEventListener('click', function () {
                const apartamentoId = this.getAttribute('data-id');
                const apartamentos = @Html.Raw(JsonConvert.SerializeObject(Model.Select(a => new
        {
            a.Id,
            a.Nombre,
            Descripcion = a.Descripcion.Length > 150 ? a.Descripcion : a.Descripcion,
            a.Tipo,
            a.Ubicacion,
            a.CapacidadMaxima
        })));

                const apartamento = apartamentos.find(a => a.Id == apartamentoId);

                if (apartamento) {
                    document.getElementById('apartamento-nombre').textContent = apartamento.Nombre;
                    document.getElementById('apartamento-descripcion').textContent = apartamento.Descripcion;
                    document.getElementById('apartamento-tipo').textContent = apartamento.Tipo;
                    document.getElementById('apartamento-ubicacion').textContent = apartamento.Ubicacion;
                    document.getElementById('apartamento-capacidad').textContent = apartamento.CapacidadMaxima;

                    tabMap.classList.remove('disabled');
                    var tab = new bootstrap.Tab(tabMap);
                    tab.show();
                }
            });
        });

        document.getElementById('disponibilidad-form').addEventListener('submit', function (e) {
            e.preventDefault();
            const fechaInicio = document.getElementById('fecha-inicio').value;
            const fechaFin = document.getElementById('fecha-fin').value;
            const apartamentoId = document.querySelector('.seleccionar-apartamento').getAttribute('data-id');

            fetch('/Apartamentos/ConsultarDisponibilidad', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ apartamentoId, fechaInicio, fechaFin })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.reservas > 0) {
                        alert('El apartamento no está disponible.');
                    } else {
                        alert('El apartamento está disponible.');
                    }
                })
                .catch(error => console.error('Error:', error));
        });

        document.getElementById('tarifa-form').addEventListener('submit', function (e) {
            e.preventDefault();
            const numeroPersonas = document.getElementById('numero-personas').value;
            const temporada = document.getElementById('temporada').value;
            const apartamentoId = document.querySelector('.seleccionar-apartamento').getAttribute('data-id');

            fetch('/Apartamentos/CalcularTarifa', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ apartamentoId, temporada, numeroPersonas })
            })
                .then(response => response.json())
                .then(data => {
                    alert(`La tarifa total es: ${data.tarifaTotal}`);
                })
                .catch(error => console.error('Error:', error));
        });
    });


</script>
